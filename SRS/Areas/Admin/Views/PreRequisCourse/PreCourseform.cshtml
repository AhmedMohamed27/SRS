@model SRS.Models.ViewModel.AspPreRequisCourseVM
@{
    ViewBag.Title = "PreCourseform";
    Layout = "~/Areas/Admin/Views/Shared/_SRSLayout.cshtml";
}

<h2>PreCourseform</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Save", "PreRequisCourse"))
            {


                <div class="form-group">
                    <label for="">Course</label>
                    @Html.DropDownListFor(c => c._Course.CourseId, new SelectList(Model.Course, "CourseId", "CourseName"), "Select Course", new { @class = "form-control",id="courseSelected" })
                    @Html.ValidationMessageFor(c => c._Course.CourseId)

                </div>


                <div class="form-group">
                    <label for="">Pre Course</label>
                    @Html.DropDownListFor(c => c._PreRquisCourse.CourseId, new SelectList(Model.PreRquisCourse, "CourseId", "CourseName"), "Select pre Course", new { @class = "form-control", id = "Precourse" })
                    @Html.ValidationMessageFor(c => c._Course.CourseId)

                </div>

                @Html.HiddenFor(c => c._Course.CourseId)
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary">Save</button>

            }
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $('#courseSelected').change(function () {
                var selected_val = $(this).val();
                $("#Precourse option[value='" + selected_val + "']").remove(); 
            });
        });
    </script>
}

